<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jwg.grunert.ajgsensor.ViewSpeedFragment">
    <!-- android:orientation="vertical" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewSpeedFile"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buttonSpeedFile" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/graphLayout"
        android:layout_below="@+id/buttonSpeedFile">
        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/graph" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select File"
        android:id="@+id/buttonSpeedFile"
        android:layout_toEndOf="@+id/buttonFitSpeed"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fit"
        android:id="@+id/buttonFitSpeed" />
</RelativeLayout>